<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.category.CategoryFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:contentInsetStartWithNavigation="0dp"
            app:theme="@style/AppToolbar">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dish_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="start|center_vertical"
                android:textColor="?attr/textColorPrimary"
                android:textSize="@dimen/text_size_medium"
                tools:text="Суши и роллы"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/margin_medium"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="4sp"
                app:autoSizeStepGranularity="0.5sp"
                app:autoSizeTextType="uniform" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_sub_category_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimaryDark"
        app:tabSelectedTextColor="@color/color_accent"
        app:tabTextColor="@color/text_color_secondary"
        app:tabTextAppearance="@style/SubCategoryTabLayout"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ru.skillbranch.sbdelivery.ui.screens.category.CategoryDishRecyclerView
        android:id="@+id/rv_dish_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tl_sub_category_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        tools:listitem="@layout/view_list_item_dish_grid"
        tools:itemCount="4"/>

</androidx.constraintlayout.widget.ConstraintLayout>